<% if @book.errors.any? %>
  <ul style="color: red">
    <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
  </ul>
  <div>
    <ul style="color: red">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<main>
  <div class="blog">
    <%= render 'users/list', user: @user %>
  </div>


  <section class="sidebar">
  <h1>Books</h1>

    <table>
      <thead>
      <tr>
      <th>Title</th>
      <th>Opinion</th>
      </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to book.title, book_path(book.id) %>
        </td>
        <td>
          <%= book.body %>
        </td>

      </tr>
      <% end %>
      </tbody>
    </table>
  </section>
</main>