<h4>User info</h4>

<p>
  <%= 'Name' %>
  <%= @user.name %>
</p>

<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

<p>
  <%= 'Introduction' %>
  <%= @user.introduction %> 
</p>
<% if @user.id == current_user.id %>
<%= link_to 'edit', edit_user_path %>
<% end %>

<h2>New book</h2>

<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <p><%= f.submit 'Create Book' %></p>
<% end %>