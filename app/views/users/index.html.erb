<div class="container">
  <div class="row">

<div class="col-xs-3">
<%= render 'users/list', user: @user, book: @book %>
</div>


<div class="col-xs-9">
<h1>Users</h1>

  <table class="table table-striped">
  	<thead>
    <tr>
    <th>image</th>
  	<th>name</th>
    </tr>
    </thead>
    <tbody>
    <tr>
    <% @users.each do |user| %>
      <td>
       <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
      </td>
      <td>
        <%= user.name %>
      </td>
      <td>
        <%= link_to "Show", user_path(user.id) %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>