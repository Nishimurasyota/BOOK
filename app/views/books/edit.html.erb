  <div class="row">
    <div class="col-xs-3"></div>
  
  <div class="col-xs-6">
  <h1>Editing Book</h1>

  <%= form_for(@book) do |f| %>

    <% if @book.errors.any? %>
      <ul style="color: red">
        <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
      </ul>
