      <% end %>
      </ul>
      </div>
   <% end %>
    <div>
      <%= 'Title' %>
      <br>
      <div class="">
        <%= f.text_field :title %>
      </div>
    </div>

    <div>
    <%= 'Opinion' %>
    <br>
    <%= f.text_area :body %>
    </div>

    <div class="">
    <input class="btn btn-default btn-block btn-primary" type="submit" value='Update Book'>
    </div>
    <div>
      <%= link_to "Show", book_path %>
      <%= link_to "Back", books_path %>
    </div>

  <% end %>
</div>

<div class="col-xs-3">
</div>

