<div class="container"> <!-- ここを追加 -->
  <div class="row">   <!-- ここを追加 -->

<% if @book.errors.any? %>
  <ul style="color: red">
    <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
  </ul>
  <div>
    <ul style="color: red">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="col-xs-3">
    <%= render 'users/list', user: @user, book: @book %>
  </div>

  <div class="col-xs-9">
  <h1>Books</h1>

  <table class="table table-striped">
    <thead>
    <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <% @books.each do |book| %>
      <td><%= link_to user_path(@user) do %>
      <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
      <% end %></td>
      <td>
        <%= link_to book.title, book_path(book.id)%>
      </td>
      <td>
        <%= book.body %>
      </td>

    </tr>
    <% end %>
    </tbody>
  </table>
  </div>
  </div>
</div>