<div class="col-lg-4">
  <%= render 'users/list', user: @user, book: @book %>
</div>

<div class="col-lg-8">
<h2>Book detail</h2>

<table class="table table-striped">
    <tbody>
    <tr>
      <td>
       <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
      </td>
      <td>
        <%= @book.title %>
      </td>
      <td>
        <%= @book.body %>
      </td>
      <% if @book.user_id == current_user.id %> 
      <td>
       <%= link_to 'Edit', edit_book_path(@book.id) %>
      </td>
      <td>
        <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
      </td>
      <% end %>
    </tr>
    </tbody>
</table>